<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pizza"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9A825"
        android:gravity="center"
        android:padding="5dp"
        android:text="Pizza"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="384dp"
            android:layout_height="656dp">

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEDED"

                android:backgroundTint="@color/white"
                android:padding="15dp"
                android:text="Cheese-Pizza" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEDED"
                android:padding="15dp"
                android:text="Paneer-Pizza" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEDED"
                android:padding="15dp"
                android:text="Non-Veg Pizza" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9A825"
                android:ems="10"
                android:hint="Select your toppings"
                android:inputType="text"
                android:padding="15dp"
                android:text="Toppings"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/radioButton7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEDED"
                android:padding="15dp"
                android:text="Pepperoni" />

            <RadioButton
                android:id="@+id/radioButton8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEDED"
                android:padding="15dp"
                android:text="Mushrooms" />

            <RadioButton
                android:id="@+id/radioButton9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEDED"
                android:padding="15dp"
                android:text="BBQ chicken" />

            <EditText
                android:id="@+id/editTextText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9A825"
                android:ems="10"
                android:inputType="text"
                android:padding="15dp"
                android:text="Dipping Sauce"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/radioButton10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEDED"
                android:padding="15dp"
                android:text="Marinara Sauce" />

            <RadioButton
                android:id="@+id/radioButton11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#EFEDED"
                android:padding="15dp"
                android:paddingBottom="20dp"
                android:text="Pesto Sauce" />

            <RadioButton
                android:id="@+id/radioButton12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEDED"
                android:padding="15dp"
                android:text="Spicy Red Sauce" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:background="#E6A964"
                android:hint="Your Selected Pizza Combination Will be Displayed Here"
                android:text=""
                android:textAlignment="center"
                android:textSize="24sp" />
        </RadioGroup>
    </LinearLayout>


</LinearLayout>